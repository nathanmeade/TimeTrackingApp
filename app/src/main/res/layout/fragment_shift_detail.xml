<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shiftdetail.ShiftDetailActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shiftInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/shiftIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shiftIdTextView"/>

    <TextView
        android:id="@+id/shiftEmployeeIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee id: "/>

    <EditText
        android:id="@+id/shiftEmployeeIdEditText"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/shiftStartTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start time: "/>

    <EditText
        android:id="@+id/shiftStartTimeEditText"
        android:layout_width="270dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/setStartDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set date"
        android:onClick="setStartDate"/>

    <Button
        android:id="@+id/setStartTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set time"
        android:onClick="setStartTime"/>

    <TextView
        android:id="@+id/shiftEndTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End time: "/>

    <EditText
        android:id="@+id/shiftEndTimeEditText"
        android:layout_width="270dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/setEndDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set date"
        android:onClick="setEndDate"/>

    <Button
        android:id="@+id/setEndTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set time"
        android:onClick="setEndTime"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:onClick="update"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:onClick="delete"/>

</LinearLayout>
